<form class="form-horizontal" method="post" action="">
	<fieldset>
		<legend>User Login</legend>
		<div class="control-group">
			<label class="control-label" for="username">User Name</label>
			<div class="controls">
				<input type="text" class="input-xlarge" id="username" name="username">
				<p class="help-block">Your account name will be use to login.</p>
			</div>
		</div>
		<div class="control-group">
			<label class="control-label" for="password">Password</label>
			<div class="controls">
				<input type="password" class="input-xlarge" id="password" name="password">
			</div>
		</div>
		<div class="control-group">
			<label class="control-label" for="password_repeat">Password Repeat</label>
			<div class="controls">
				<input type="password" class="input-xlarge" id="password_repeat" name="password_repeat">
			</div>
		</div>
		<div class="form-actions">
			<button type="submit" class="btn btn-primary">Login</button>
		</div>
	</fieldset>
</form>